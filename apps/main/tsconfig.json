{
  "extends": "@packages/config/ts-base.json",
  "compilerOptions": {
    "types": ["vitest/globals", "@types/testing-library__jest-dom"],
    "baseUrl": "./src",
    "paths": {
      "~components/*": ["./components/*"],
      "~constants/*": ["./constants/*"],
      "~features/*": ["./features/*"],
      "~hooks": ["./hooks/index.ts"],
      "~models": ["./models/index.ts"],
      "~redux/*": ["./redux/*"],
      "~types": ["./types.d.ts"],
      "~utils": ["./utils/index.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
